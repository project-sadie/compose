set -e

if [ -f /etc/os-release ]; then
    . /etc/os-release
    if [[ "$ID" != "ubuntu" ]]; then
        echo "This script is intended for Ubuntu only. Detected OS: $ID"
        exit 1
    fi
else
    echo "Cannot determine OS. /etc/os-release not found."
    exit 1
fi

if ! command -v docker &> /dev/null; then
    echo "Docker not found. Installing Docker and Docker Compose plugin..."
    sudo apt-get update
    sudo apt-get install -y ca-certificates curl gnupg lsb-release
    sudo mkdir -p /etc/apt/keyrings
    curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /etc/apt/keyrings/docker.gpg
    echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable" | sudo tee /etc/apt/sources.list.d/docker.list > /dev/null
    sudo apt-get update
    sudo apt-get install -y docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin
    echo "Docker and Docker Compose plugin installed successfully."
else
    echo "Docker is already installed."
fi

if ! docker compose version &> /dev/null; then
    echo "Docker Compose plugin not found. Trying to install..."
    sudo apt-get install -y docker-compose-plugin
fi

git clone https://github.com/project-sadie/www ../www
git clone https://github.com/project-sadie/api ../api
git clone https://github.com/project-sadie/SadieEmulator ../SadieEmulator
git clone https://github.com/billsonnn/nitro-react ../nitro-react

mv ../nitro-react/public/renderer-config.json.example ../nitro-react/public/renderer-config.json
mv ../nitro-react/public/ui-config.json.example ../nitro-react/public/ui-config.json

sed -i 's/website.com/cdn.sadie.pw/g' ../nitro-react/public/renderer-config.json

mv ../SadieEmulator/Sadie.Console/appsettings.json.example ../SadieEmulator/Sadie.Console/appsettings.json

sed -i -e 's/Pwd=;/Pwd=secret;/g' ../SadieEmulator/Sadie.Console/appsettings.json \
       -e 's/Server=127.0.0.1;/Server=mariadb;/g' ../SadieEmulator/Sadie.Console/appsettings.json \

docker compose up --d

